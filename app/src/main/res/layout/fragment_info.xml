<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/info_alkali_metal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/alkali_metal"
                tools:text="ALKALI_METAL" />

            <TextView
                android:id="@+id/info_alkaline_earth_metal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/alkaline_earth_metal"
                tools:text="ALKALINE_EARTH_METAL" />

            <TextView
                android:id="@+id/info_transition_metal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/transition_metal"
                tools:text="TRANSITION_METAL" />

            <TextView
                android:id="@+id/info_metal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/metal"
                tools:text="METAL" />

            <TextView
                android:id="@+id/info_metaloid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/metaloid"
                tools:text="METALOID" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/info_non_metal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/non_metal"
                tools:text="NON_METAL" />

            <TextView
                android:id="@+id/info_halogen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/halogen"
                tools:text="HALOGEN" />

            <TextView
                android:id="@+id/info_noble_gas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/noble_gas"
                tools:text="NOBLE_GAS" />

            <TextView
                android:id="@+id/info_lanthanide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/lanthanide"
                tools:text="LANTHANIDE" />

            <TextView
                android:id="@+id/info_actinide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/actinide"
                tools:text="ACTINIDE" />
        </LinearLayout>

    </LinearLayout>

</layout>